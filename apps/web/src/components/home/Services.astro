---
import Container from '../ui/Container.astro';
import Badge from '../ui/Badge.astro';

const services = [
  {
    title: 'Architecture & Re-Architecture',
    description: 'Breaking down legacy systems into scalable, maintainable architectures.',
    outcomes: ['Faster deployments', 'Reduced coupling', 'Clear migration paths'],
    stack: ['System Design', 'Microservices'],
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6.429 9.75L2.25 12l4.179 2.25m0-4.5l5.571 3 5.571-3m-11.142 0L2.25 7.5 12 2.25l9.75 5.25-4.179 2.25m0 0L21.75 12l-4.179 2.25m0 0l4.179 2.25L12 21.75 2.25 16.5l4.179-2.25m11.142 0l-5.571 3-5.571-3" />`,
  },
  {
    title: 'Backend APIs & Integrations',
    description: 'Designing robust APIs and integrating external services safely.',
    outcomes: ['Reliable integrations', 'Clean API contracts', 'Proper error handling'],
    stack: ['REST', 'GraphQL', 'Webhooks'],
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244" />`,
  },
  {
    title: 'Payment Systems',
    description: 'Wallets, gateways, webhooks, reconciliation, failure-safe flows.',
    outcomes: ['Zero missed transactions', 'Full audit trails', 'Recovery paths'],
    stack: ['Payments', 'Ledgers', 'Queues'],
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 002.25-2.25V6.75A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25v10.5A2.25 2.25 0 004.5 19.5z" />`,
  },
  {
    title: 'Cloud & DevOps',
    description: 'Dockerized deployments, Kubernetes, CI/CD, monitoring.',
    outcomes: ['Safe deploys', 'Repeatable builds', 'Production observability'],
    stack: ['AWS', 'K8s', 'Docker'],
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.25 15a4.5 4.5 0 004.5 4.5H18a3.75 3.75 0 001.332-7.257 3 3 0 00-3.758-3.848 5.25 5.25 0 00-10.233 2.33A4.502 4.502 0 002.25 15z" />`,
  },
];
---

<section class="py-12">
  <Container>
    <!-- Section header -->
    <div class="mb-8 text-center">
      <span class="inline-block text-[10px] font-medium uppercase tracking-widest text-muted mb-3">Services</span>
      <h2 class="text-xl md:text-2xl font-semibold text-text">What I can help with</h2>
    </div>

    <div class="grid md:grid-cols-2 gap-4">
      {services.map((service) => (
        <article class="group card-interactive p-5">
          <div class="flex items-start gap-4">
            <!-- Icon -->
            <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-bg border border-border flex items-center justify-center transition-colors" style="transition: border-color 0.18s ease-out;">
              <svg
                class="w-5 h-5 text-muted group-hover:text-primary transition-colors"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                set:html={service.icon}
              />
            </div>

            <div class="flex-1 min-w-0">
              <!-- Title -->
              <h3 class="text-sm font-semibold text-text mb-1.5">{service.title}</h3>

              <!-- Description -->
              <p class="text-sm text-muted mb-3 leading-relaxed">{service.description}</p>

              <!-- Typical outcomes -->
              <div class="mb-3">
                <span class="text-[10px] font-medium text-muted uppercase tracking-wide">Typical outcomes</span>
                <ul class="mt-1.5 flex flex-wrap gap-x-3 gap-y-1">
                  {service.outcomes.map((outcome) => (
                    <li class="text-xs text-text-2 flex items-center gap-1.5">
                      <span class="w-1 h-1 rounded-full bg-primary/50"></span>
                      {outcome}
                    </li>
                  ))}
                </ul>
              </div>

              <!-- Stack tags -->
              <div class="flex flex-wrap gap-1.5">
                {service.stack.map((tech) => (
                  <Badge size="sm">{tech}</Badge>
                ))}
              </div>
            </div>
          </div>
        </article>
      ))}
    </div>
  </Container>
</section>
