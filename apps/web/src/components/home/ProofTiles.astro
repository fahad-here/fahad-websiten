---
import Container from '../ui/Container.astro';

const proofTiles = [
  {
    title: 'Payments & reconciliation',
    description: 'Webhook-safe flows, recovery paths, traceability',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 002.25-2.25V6.75A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25v10.5A2.25 2.25 0 004.5 19.5z" />`,
  },
  {
    title: 'Wallets & ledgers',
    description: 'Balance correctness, lifecycle states, auditability',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 12a2.25 2.25 0 00-2.25-2.25H15a3 3 0 11-6 0H5.25A2.25 2.25 0 003 12m18 0v6a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 18v-6m18 0V9M3 12V9m18 0a2.25 2.25 0 00-2.25-2.25H5.25A2.25 2.25 0 003 9m18 0V6a2.25 2.25 0 00-2.25-2.25H5.25A2.25 2.25 0 003 6v3" />`,
  },
  {
    title: 'Event-driven services',
    description: 'Queues, workers, idempotency, retries',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7.5 21L3 16.5m0 0L7.5 12M3 16.5h13.5m0-13.5L21 7.5m0 0L16.5 12M21 7.5H7.5" />`,
  },
  {
    title: 'AWS / K8s / CI/CD',
    description: 'Deploy safely, monitor, iterate',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.25 15a4.5 4.5 0 004.5 4.5H18a3.75 3.75 0 001.332-7.257 3 3 0 00-3.758-3.848 5.25 5.25 0 00-10.233 2.33A4.502 4.502 0 002.25 15z" />`,
  },
];
---

<section class="py-10 border-y border-border bg-panel/50">
  <Container>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
      {proofTiles.map((tile) => (
        <div class="flex items-start gap-3 p-4 rounded-lg bg-panel border border-border/50 hover:border-border transition-colors">
          <div class="flex-shrink-0 w-8 h-8 rounded-md bg-panel-2 flex items-center justify-center">
            <svg
              class="w-4 h-4 text-primary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              set:html={tile.icon}
            />
          </div>
          <div class="min-w-0">
            <h3 class="text-sm font-medium text-text">{tile.title}</h3>
            <p class="text-xs text-muted mt-0.5 leading-relaxed">{tile.description}</p>
          </div>
        </div>
      ))}
    </div>
  </Container>
</section>
