---
import Container from '../ui/Container.astro';
import Badge from '../ui/Badge.astro';

const tags = [
  'Forex CRMs',
  'Payment Gateways',
  'Trading Platforms',
  'Real-Time Systems',
  'Crypto Exchanges',
];
---

<section class="py-12 border-y border-border bg-panel/30">
  <Container>
    <div class="flex flex-col md:flex-row items-center gap-6">
      <span class="text-muted font-medium whitespace-nowrap">Systems I Build</span>
      <div class="flex flex-wrap justify-center md:justify-start gap-3">
        {tags.map((tag) => (
          <Badge variant="accent">{tag}</Badge>
        ))}
      </div>
    </div>
  </Container>
</section>
