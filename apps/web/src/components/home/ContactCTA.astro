---
import Container from '../ui/Container.astro';
import Button from '../ui/Button.astro';
---

<section class="py-16">
  <Container>
    <div class="relative card-interactive-subtle p-8 md:p-12 text-center max-w-2xl mx-auto">
      <h2 class="text-xl md:text-2xl font-semibold text-text mb-3">
        Let's work together
      </h2>
      <p class="text-muted text-sm mb-6 max-w-md mx-auto leading-relaxed">
        Available for consulting, contract work, or full-time opportunities in fintech and backend engineering.
      </p>
      <Button href="/contact" variant="primary">
        Start a conversation
      </Button>
    </div>
  </Container>
</section>
