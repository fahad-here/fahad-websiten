---
interface Props {
  style?: 'default' | 'dots' | 'space';
}

const { style = 'default' } = Astro.props;
---

{style === 'default' && (
  <div class="divider-default my-12" role="separator" aria-hidden="true">
    <hr class="border-none h-px bg-gradient-to-r from-transparent via-border to-transparent" />
  </div>
)}

{style === 'dots' && (
  <div class="divider-dots my-12 flex items-center justify-center gap-3" role="separator" aria-hidden="true">
    <span class="w-1 h-1 rounded-full bg-muted/40"></span>
    <span class="w-1.5 h-1.5 rounded-full bg-muted/60"></span>
    <span class="w-1 h-1 rounded-full bg-muted/40"></span>
  </div>
)}

{style === 'space' && (
  <div class="divider-space my-16" role="separator" aria-hidden="true"></div>
)}

<style>
  /* Premium divider styling */
  .divider-default hr {
    opacity: 0.8;
  }

  /* Subtle animation on dots for visual interest */
  .divider-dots span:nth-child(2) {
    animation: subtle-pulse 3s ease-in-out infinite;
  }

  @keyframes subtle-pulse {
    0%, 100% { opacity: 0.6; }
    50% { opacity: 0.4; }
  }

  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .divider-dots span:nth-child(2) {
      animation: none;
    }
  }
</style>
