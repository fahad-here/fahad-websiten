---
interface Props {
  href?: string;
  class?: string;
}

const { href, class: className = '' } = Astro.props;

const baseClasses = 'block card-interactive overflow-hidden';
const classes = `${baseClasses} ${className}`;
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <div class={classes}>
    <slot />
  </div>
)}
