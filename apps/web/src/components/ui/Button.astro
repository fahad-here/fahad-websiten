---
interface Props {
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  class?: string;
}

const { variant = 'primary', href, type = 'button', class: className = '' } = Astro.props;

const baseClasses = 'inline-flex items-center justify-center px-5 py-2.5 rounded-lg font-medium transition-all duration-200 focus-ring text-sm';

const variantClasses = {
  primary: 'bg-primary text-bg hover:bg-primary-2',
  secondary: 'bg-panel border border-border text-text hover:bg-panel-2',
  outline: 'bg-transparent border border-border text-text hover:bg-panel-2',
  ghost: 'text-text hover:bg-panel',
};

const classes = `${baseClasses} ${variantClasses[variant]} ${className}`;
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} class={classes}>
    <slot />
  </button>
)}
