---
interface Props {
  title: string;
  subtitle?: string;
  align?: 'left' | 'center';
  class?: string;
}

const { title, subtitle, align = 'left', class: className = '' } = Astro.props;

const alignClasses = {
  left: 'text-left',
  center: 'text-center',
};
---

<div class={`mb-8 ${alignClasses[align]} ${className}`}>
  <h2 class="text-xl md:text-2xl font-bold text-text mb-2">
    {title}
  </h2>
  {subtitle && (
    <p class="text-sm text-muted max-w-xl" class:list={[align === 'center' && 'mx-auto']}>
      {subtitle}
    </p>
  )}
</div>
